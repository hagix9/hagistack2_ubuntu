[DEFAULT]
libvirt_type={{ virt_type }}
host={{ controller_int_ip }}
auth_strategy=keystone
http_control_exchanges=nova
http_control_exchanges=glance
http_control_exchanges=neutron
http_control_exchanges=cinder
nova_control_exchange=nova
glance_control_exchange=glance
neutron_control_exchange=neutron

# LOGS
debug={{ log_debug }}
verbose={{ log_verbose }}
log_dir=/var/log/ceilometer

# RABBITMQ
rabbit_host={{ controller_int_ip }}
rabbit_virtual_host=/ceilometer
rabbit_userid={{ ceilometer_mq_user }}
rabbit_password={{ ceilometer_mq_password }}

[api]
port=8777
host=0.0.0.0

[database]
backend=sqlalchemy
connection=mysql://ceilometer:{{ mysql_ceilometer_password }}@{{ controller_int_ip }}/ceilometer

[keystone_authtoken]
auth_uri = http://{{ controller_int_ip }}:5000
auth_host={{ controller_int_ip }}
auth_port=35357
auth_protocol=http
admin_tenant_name=service
admin_user=ceilometer
admin_password={{ ceilometer_keystone_password }}

[publisher]
metering_secret={{ metering_secret }}

[service_credentials]
os_auth_url = http://{{ controller_int_ip }}:5000/v2.0
os_username = ceilometer
os_tenant_name = service
os_password = {{ ceilometer_keystone_password }}

